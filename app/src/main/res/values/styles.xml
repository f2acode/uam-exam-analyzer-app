<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="EtLogin" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ItemMainMenu" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="SimpleBtn" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SimpleLargeBtn" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SimpleSecondaryBtn" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SimpleSecondaryLargeBtn" parent="@android:style/Widget.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TxtIconsProva" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="ItemProva" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item>
    </style>

</resources>
