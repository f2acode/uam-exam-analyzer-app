<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <EditText
        android:id="@+id/email_registro"
        style="@style/EtLogin"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <EditText
        android:id="@+id/repetir_email_registro"
        style="@style/EtLogin"
        android:layout_below="@id/email_registro"
        android:inputType="textEmailAddress"
        android:hint="Repetir Email"/>

    <EditText
        android:id="@+id/senha_registro"
        android:layout_below="@id/repetir_email_registro"
        android:inputType="textPassword"
        style="@style/EtLogin"
        android:hint="Senha"/>

    <EditText
        android:id="@+id/repetir_senha_registro"
        android:layout_below="@id/senha_registro"
        android:inputType="textPassword"
        style="@style/EtLogin"
        android:hint="Repetir senha"/>

    <Button
        android:id="@+id/btn_registro"
        android:layout_below="@id/repetir_senha_registro"
        android:text="Registrar"
        style="@style/SimpleBtn"
        android:onClick="registrar"/>

</RelativeLayout>