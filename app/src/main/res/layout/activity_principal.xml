<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="plomba.com.br.analisadorprovas.Principal">

    <Button
        android:id="@+id/btn_nova_foto"
        android:text="@string/adicionarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:drawableRight="@android:drawable/ic_menu_camera"
        android:drawablePadding="5dp"
        android:onClick="dispararIntentTirarFoto"/>

    <Button
        android:id="@+id/btn_galeria"
        android:text="Galeria"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableRight="@android:drawable/ic_menu_gallery"
        android:drawablePadding="5dp"
        android:onClick="abrirGaleria"
        android:layout_below="@+id/btn_nova_foto"/>

    <Button
        android:id="@+id/btn_estatisticas"
        android:text="EstatÃ­sticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="abrirEstatisticas"
        android:drawableRight="@android:drawable/ic_dialog_info"
        android:drawablePadding="10dp"
        android:layout_below="@+id/btn_galeria"/>

</RelativeLayout>
